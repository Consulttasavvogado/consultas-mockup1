<script>
  // set year
  document.getElementById('year').innerText = new Date().getFullYear();

  // Intersection Observer for scroll-triggered reveal
  const io = new IntersectionObserver((entries) => {
    entries.forEach(e=>{
      if(e.isIntersecting){
        e.target.classList.add('show');
      }
    });
  }, {threshold: .15});

  // observe hero text & cards
  const targets = document.querySelectorAll('h2, .lead, .card');
  targets.forEach(t => io.observe(t));

  // stagger reveal for cards (when first card shows, show others with delay)
  const card1 = document.getElementById('card-reviews');
  io.observe(card1);
  card1.addEventListener('transitionend', () => {
    setTimeout(()=>document.getElementById('card-bilingual').classList.add('show'), 120);
    setTimeout(()=>document.getElementById('card-verified').classList.add('show'), 240);
  }, {once:true});
</script>
